# Portal API Environment Configuration
# Copy this file to .env and fill in your actual values
# ⚠️ DO NOT COMMIT THE .env FILE

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/your_database_name
DB_USERNAME=your_db_username
DB_PASSWORD=your_secure_db_password

# JWT Configuration
# Generate a secure secret: openssl rand -hex 32
JWT_SECRET=your_jwt_secret_key_at_least_32_characters_long
JWT_ACCESS_TOKEN_EXPIRATION=3600000
JWT_REFRESH_TOKEN_EXPIRATION=604800000

# JPA/Hibernate Configuration
JPA_SHOW_SQL=false
JPA_DDL_AUTO=validate

# Email Configuration
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your_email@example.com
MAIL_PASSWORD=your_email_password
MAIL_SMTP_AUTH=true
MAIL_STARTTLS=true

# File Storage
# Path where uploaded files will be stored (use double backslash on Windows)
STORAGE_BASE_PATH=/path/to/storage

# Server Configuration
SERVER_PORT=8081

# Flyway Configuration (for pom.xml)
FLYWAY_URL=jdbc:postgresql://localhost:5432/your_database_name
FLYWAY_USER=your_db_username
FLYWAY_PASSWORD=your_secure_db_password
