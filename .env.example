# ============================================
# WD Portal API Environment Configuration
# ============================================
# IMPORTANT: Copy this file to .env and fill in your actual values
# DO NOT commit the .env file to version control

# ============================================
# Server Configuration
# ============================================
SERVER_PORT=8081

# ============================================
# Database Configuration
# ============================================
DB_URL=jdbc:postgresql://localhost:5432/wdTestDB
DB_USERNAME=postgres
DB_PASSWORD=your-database-password-here

# ============================================
# JWT Configuration
# ============================================
# Generate a secure secret key (minimum 32 characters recommended)
# Example: openssl rand -base64 32
JWT_SECRET=your-jwt-secret-key-here-minimum-32-characters
JWT_ACCESS_EXPIRATION=3600000
JWT_REFRESH_EXPIRATION=604800000

# ============================================
# File Storage Configuration
# ============================================
STORAGE_BASE_PATH=N:\Projects\wd projects git\storage
FILE_UPLOAD_DIR=uploads
FILE_MAX_SIZE=10485760
FILE_MAX_REQUEST=20971520

# ============================================
# Email Configuration
# ============================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-email-password-here
MAIL_SMTP_AUTH=true
MAIL_STARTTLS=true

# ============================================
# Company Information
# ============================================
COMPANY_NAME=Walldot Builders LLP
COMPANY_ADDRESS=123 Construction Avenue, Building City, State - 123456
COMPANY_PHONE=+91 1234567890
COMPANY_EMAIL=info@walldotbuilders.com
COMPANY_WEBSITE=www.walldotbuilders.com
COMPANY_GST=GST123456789
COMPANY_PAN=ABCDE1234F

# ============================================
# Task Alert Configuration
# ============================================
TASK_ALERTS_ENABLED=true
TASK_ALERTS_CRON=0 0 9 * * *
TASK_ALERTS_TIMEZONE=Asia/Kolkata

# ============================================
# JPA/Hibernate Configuration
# ============================================
JPA_DDL_AUTO=none
JPA_SHOW_SQL=false

# ============================================
# HikariCP Connection Pool
# ============================================
HIKARI_MAX_POOL=10
HIKARI_MIN_IDLE=2
